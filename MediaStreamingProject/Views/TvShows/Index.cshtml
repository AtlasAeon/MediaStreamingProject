@model IEnumerable<MediaStreamingProject.Models.TvShow>

@{
    ViewBag.Title = "Tv Shows";

}

<div class="row container">
    <h2 class="header">Tv Shows</h2>
    <p class="grey-text text-darken-3 lighten-3">Browse available tv shows!</p>
</div>
<div class="row">
    @foreach (var item in Model) {

        <div class="col s6 m3">
            <div class="card">
                <div class="card-image">
                    <img src=@Html.DisplayFor(modelItem => item.TvShow_Image_Link)>
                </div>
                <div class="card-content">
                    <span class="card-title">@Html.DisplayFor(modelItem => item.ShowName)</span>
                    <ul>
                        <li>Start Year: @String.Format("{0:yyyy}", item.StartYear)</li>
                        <li>Seasons: @Html.DisplayFor(modelItem => item.Seasons)</li>
                        <li>IMDB Rating: @Html.DisplayFor(modelItem => item.ImdbRating)</li>
                        <li>Network: @Html.DisplayFor(modelItem => item.Network.NetName)</li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>